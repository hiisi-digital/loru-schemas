{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LoruConfig",
  "type": "object",
  "additionalProperties": false,
  "$defs": {
    "PipelineArtifacts": {
      "type": "object",
      "description": "Artifact output options for pipeline steps.",
      "additionalProperties": false,
      "properties": {
        "scope": {
          "type": "string",
          "enum": ["workspace", "project", "custom"],
          "description": "Where artifacts should live: workspace root, project root, or a custom path."
        },
        "path": {
          "type": "string",
          "description": "Custom base path for artifacts (absolute or relative to project)."
        },
        "dirname": {
          "type": "string",
          "description": "Subdirectory template under artifact base (supports @tool and @tool-target tokens)."
        }
      }
    },
    "PipelineStepBase": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "description": "Optional label for this pipeline step."
        },
        "targets": {
          "type": "array",
          "description": "Optional list of plugin/page/lib identifiers this step applies to.",
          "items": { "type": "string" }
        },
        "cmd": {
          "type": "string",
          "description": "Default command to run for this step."
        },
        "platform": {
          "type": "object",
          "description": "Platform-specific overrides.",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "cmd": {
                "type": "string",
                "description": "Command for this platform."
              }
            }
          }
        }
      }
    },
    "CheckTask": {
      "allOf": [
        { "$ref": "#/$defs/PipelineStepBase" },
        {
          "type": "object",
          "required": ["stage"],
          "properties": {
            "stage": {
              "type": "string",
              "enum": ["precheck", "fmt", "lint", "check", "test", "postcheck"],
              "description": "Check pipeline stage for this step."
            }
          }
        }
      ]
    },
    "BuildTask": {
      "allOf": [
        { "$ref": "#/$defs/PipelineStepBase" },
        {
          "type": "object",
          "required": ["phase"],
          "properties": {
            "phase": {
              "type": "string",
              "enum": ["prebuild", "build", "postbuild", "prerelease", "postrelease"],
              "description": "Build lifecycle phase."
            }
          }
        }
      ]
    }
  },
  "properties": {
    "lib": {
      "type": "array",
      "description": "Libraries/packages within this workspace that can be published.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "path", "kind"],
        "properties": {
          "name": { "type": "string", "description": "Library/package name." },
          "path": { "type": "string", "description": "Relative path to the library root." },
          "kind": { "type": "string", "enum": ["deno", "rust"], "description": "Library type for publishing." },
          "publish": { "type": "string", "description": "Publish target (e.g., jsr, crates.io)." }
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "schema_version": {
          "type": "string",
          "description": "Default schema version for entries (semver or range)."
        }
      }
    },
    "workspace": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "members": {
          "type": "array",
          "description": "Paths to member projects included in this workspace.",
          "items": { "type": "string" }
        }
      }
    },
    "plugin": {
      "type": "array",
      "description": "Plugin entries in this workspace/project.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Unique slug for the plugin (lowercase, kebab-case)."
          },
          "name": {
            "type": "string",
            "description": "Human-readable name for the plugin."
          },
          "path": {
            "type": "string",
            "description": "Relative path to the plugin project root.",
            "default": "."
          },
          "entrypoint": {
            "type": "string",
            "description": "Path to the plugin entry module.",
            "default": "mod.ts"
          },
          "schema_version": {
            "type": "string",
            "description": "Schema version/range to validate this plugin metadata."
          }
        }
      }
    },
    "page": {
      "type": "array",
      "description": "Tenant/page entries in this workspace/project.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Unique slug for the tenant/page (lowercase, kebab-case)."
          },
          "name": {
            "type": "string",
            "description": "Display name for the tenant/page."
          },
          "path": {
            "type": "string",
            "description": "Relative path to the tenant project root.",
            "default": "."
          },
          "entrypoint": {
            "type": "string",
            "description": "Entry module for this tenant/page.",
            "default": "main.ts"
          },
          "schema_version": {
            "type": "string",
            "description": "Schema version/range to validate this tenant metadata."
          },
          "domains": {
            "type": "array",
            "description": "Primary domains associated with this tenant/page.",
            "items": { "type": "string" }
          },
          "locales": {
            "type": "array",
            "description": "Supported locales.",
            "items": { "type": "string" }
          }
        }
      }
    },
    "task": {
      "type": "array",
      "description": "Custom tasks available in this workspace or project.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Task name invoked via `loru run <name>`."
          },
          "description": {
            "type": "string",
            "description": "What this task does."
          },
          "cmd": {
            "type": "string",
            "description": "Default command to run (shell)."
          },
          "platform": {
            "type": "object",
            "description": "Platform-specific overrides.",
            "additionalProperties": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "cmd": {
                  "type": "string",
                  "description": "Command for this platform."
                }
              }
            }
          }
        }
      }
    },
    "check": {
      "type": "object",
      "description": "Check pipeline configuration.",
      "additionalProperties": false,
      "properties": {
        "artifacts": { "$ref": "#/$defs/PipelineArtifacts" },
        "task": {
          "type": "array",
          "description": "Check pipeline hooks that run with loru dev check (fmt/lint/type-check/test).",
          "items": { "$ref": "#/$defs/CheckTask" }
        }
      }
    },
    "build": {
      "type": "object",
      "description": "Build pipeline configuration.",
      "additionalProperties": false,
      "properties": {
        "artifacts": { "$ref": "#/$defs/PipelineArtifacts" },
        "task": {
          "type": "array",
          "description": "Build pipeline tasks with explicit phases.",
          "items": { "$ref": "#/$defs/BuildTask" }
        }
      }
    }
  }
}
